<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.noteapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyTheme">
        <activity android:name=".activities.ActivityNoteMain">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.ActivityAddNote"
            android:label="@string/add_note_header"></activity>
        <activity
            android:name=".activities.ActivityEditNote"
            android:label="@string/edit_note_header">

        </activity>

        <activity
            android:name=".activities.ActivityDisplayNote"
            android:label="Your Note">

        </activity>
    </application>

</manifest>